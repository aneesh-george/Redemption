
@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>
<div class="row">
    <div class="col-md-12">
        <label>Enter your phone number: </label>
    </div>
</div>
<div class="row">
@using (Html.BeginForm("OTPModule", "Register"))
{ 
    <div class="col-md-8" style="width:20%;">
        <input id="mobNo" maxlength="10" type="number" name="mobNo" min="1000000000" max="9999999999" oninvalid="this.setCustomValidity('Please enter a valid mobile number without the country code!')"
    oninput="setCustomValidity('')" required/>
    </div>
    <div class="col-md-4">
        <input type="submit" class="btn btn-default" value="Go"/>
    </div>
}
</div>
    

