<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Redemption Group of Hospitals. &copy; Titans</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:#357ebd;">
        <div class="container">
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="float:left;font-size: x-large;">
                    <li style="text-decoration:none;">@Html.ActionLink("Redemption", "Index", "Home",null, new { @style = "color:white;" })</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <footer style="position:fixed;bottom: 0;">
            <hr />
            <p>&copy; @DateTime.Now.Year - Redemption Group of Hospitals. &copy; Titans</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
